{
    "scripts": {
        "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
        "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
        "test": "tsc && wtr --coverage",
        "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch --node-resolve\"",
        "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
        "storybook:build": "tsc && build-storybook",
        "build": "./scripts/build.sh",
        "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
        "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
        "build:css": "postcss src/assets/styles.css -o src/assets/styles.output.css",
        "build:css:watch": "TAILWIND_MODE=watch postcss src/assets/styles.css -o src/assets/styles.output.css --watch",
        "serve": "http-server-spa dist index.html"
    },
    "name": "liza-james-wedding",
    "version": "0.0.0",
    "description": "Webcomponent liza-james-wedding following open-wc recommendations",
    "author": "liza-james-wedding",
    "license": "MIT",
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@material/mwc-circular-progress": "^0.22.1",
        "@open-wc/building-rollup": "^1.10.0",
        "@open-wc/dev-server-hmr": "^0.1.1",
        "@open-wc/eslint-config": "^4.3.0",
        "@open-wc/testing": "^3.0.0-next.3",
        "@tailwindcss/aspect-ratio": "^0.2.1",
        "@tailwindcss/forms": "^0.3.3",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "@vaadin/router": "^1.7.4",
        "@web/dev-server": "^0.1.22",
        "@web/dev-server-esbuild": "^0.2.14",
        "@web/dev-server-rollup": "^0.3.9",
        "@web/dev-server-storybook": "^0.3.8",
        "@web/rollup-plugin-copy": "^0.3.0",
        "autoprefixer": "^10.2.5",
        "concurrently": "^5.3.0",
        "deepmerge": "^4.2.2",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^7.2.0",
        "gh-pages": "^3.2.0",
        "http-server-spa": "^1.3.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "lit": "^2.0.0-rc.2",
        "lit-element": "^2.5.1",
        "lit-html": "^1.4.1",
        "postcss": "^8.3.5",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.50.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-postcss": "^4.0.0",
        "tslib": "^2.2.0",
        "typescript": "^4.2.4",
        "uuid": "^8.3.2"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "@open-wc/eslint-config",
            "eslint-config-prettier"
        ],
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "error"
            ],
            "import/no-unresolved": "off",
            "import/extensions": [
                "error",
                "always",
                {
                    "ignorePackages": true
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@testing-library/dom": "^8.5.0",
        "@web/test-runner": "^0.13.17",
        "tailwindcss": "^2.2.15"
    }
}
